<%- include("header"); -%>
<div class="box" id="heading">
  <h1><%= listTitle %> </h1>
</div>
<div class="box">
  <%  newListItems.forEach(function(newListItem){ %>

  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" onChange="this.form.submit()" name="checkbox" value=<%= newListItem.id%>>
      <p><%= newListItem.name %></p>
    </div>
    <input type="hidden" name="checkboxTitle" value="<%= listTitle %>"></input>
  </form>
  <%    }); %>
  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="Type here" autocomplete="off">
    <button class="btn btn-primary" type="submit" name="submit" value=<%= listTitle %>>+</button>
  </form>
</div>
<%- include("footer"); -%>
